
.home-order {
	height: 100vh;
}
.order-view {
	margin: 20rpx;
	border-bottom: 1rpx solid rgb(242, 242, 242);
}
.order-top {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin: 20rpx 10rpx;
}
.order-number {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.order-state {
	font-size: 24rpx;
}
.order-bottom {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 20rpx;
}
.order-price {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.order-bottom button {
	font-size: 24rpx;
	color: #FFFFFF;
	border-radius: 99rpx;
}

