
.home-books {
	height: 100vh;
}
.books-view {
	border-bottom: 1rpx solid rgb(242, 242, 242);
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 50rpx 30rpx;
}
.book-image image {
	min-width: 90rpx;
	width: 180rpx;
	height: 256rpx;
}
.book-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-left: 24rpx;
	width: 100%;
}
.book-description {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.book-title {
	font-size: 32rpx;
}
.book-author {
	margin-top: 8rpx;
	font-size: 24rpx;
	color: rgb(170, 170, 170);
}
.book-rating {
	margin-top: 8rpx;
	font-size: 24rpx;
	color: rgb(214, 186, 140);
}
.book-rate {
	height: 58rpx;
	margin-top: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.book-price {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	font-size: 34rpx;
}
.book-control button {
	border: 1rpx solid #eaeaea;
	border-radius: 99rpx;
	font-size: 24rpx;
}

